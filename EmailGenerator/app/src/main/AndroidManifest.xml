<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.pminer.emailgenerator">

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_dialog_email"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_dialog_email"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ClientSelector"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailSelector"
            android:label="@string/title_activity_email_selector"
            android:parentActivityName=".ClientSelector"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.pminer.emailgenerator.ClientSelector" />
        </activity>
    </application>

</manifest>